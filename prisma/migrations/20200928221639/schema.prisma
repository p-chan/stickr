datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id        String   @id
  raw       Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users   User[]
  aliases Alias[]
}

model User {
  id        String   @unique
  teamId    String
  xoxsToken String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id])

  @@id([id, teamId])
}

model Alias {
  id           String   @id @default(uuid())
  name         String
  originalName String
  teamId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id])

  @@unique([name, teamId])
}
